{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "none",
        "moduleResolution": "Node",
        "target": "ES5",
        "allowSyntheticDefaultImports": true, // Added this line
        "jsx": "react",
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": false,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.promise",
            "es2015.proxy"
        ],
        "noImplicitReturns": true,
        "typeRoots": [
            "./@types",
            "./node_modules/@types"
        ]
    }
}